CONFIG_SIFIVE_PLIC=y
CONFIG_FPU=n
CONFIG_SMP=y
CONFIG_STRICT_KERNEL_RWX=n
CONFIG_EFI=n
CONFIG_HVC_RISCV_SBI=y

